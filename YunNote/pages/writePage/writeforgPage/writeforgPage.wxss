.head{
  background-color: #0d5ba3;
  height: 80rpx;
  width: 100%;
  color: white;
  text-align: center;
  padding-top: 15rpx;
  }
.tittle{
  margin: 30rpx;
  padding-bottom:30rpx ;
  border-bottom: 2rpx solid #0d5ba3;
  font-size: 0.8em;
  color: #0d5ba3;
  opacity: 0.6;
}
.content{
  margin: 30rpx;
  padding-bottom:30rpx ;
  height: 700rpx;
  font-size: 0.8em;
  color: #0d5ba3;
  opacity: 0.6;
}
.content textarea{
  width: 100%;
  height: 100%;
}
.bottom{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background-color:  #0d5ba3;
  width: 100%;
}
.save{
  width: 70rpx;
  height: 50rpx;
  float: right;
  margin-top:20rpx;
  margin-right: 40rpx;
  margin-left: 20rpx;
}
.photo{
  width: 60rpx;
  height: 50rpx;
  float: right;
  margin:20rpx 20rpx;
}
.label{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin:20rpx 20rpx;
}
.unlocking{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  z-index: 99;
  top: 1010rpx;
  left: 655rpx;
}
.labelNav{
  position: absolute;
  width: 200rpx;
  height: 280rpx;
  background-color: white;
  border-radius: 10rpx;
  left: 400rpx;
  top: 900rpx;
  z-index: 99;
  box-shadow: 1rpx 1rpx 2rpx gray;
}
.labelNav view{
  margin: 30rpx 30rpx;
  font-size: 0.8em;
  color: #0d5ba3;
}
.tag-container{
  width: 80%;
  height: 70rpx;
  margin-left: 30rpx;
  word-wrap:break-word;
}
.tag-container text{
  display: inline-block;
  width: auto;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  height: 60rpx;
  border-radius: 20rpx;
}
.first-box{
  display: inline;
  margin-left: 30rpx;
  background-color: #f1eeee;
  border-radius: 20rpx;
  color: #0d5ba3;
}
.tag-img{
  display: inline-block;
  margin-left: 20rpx;
  margin-right: 8rpx;
  background-color: #f1eeee;
  width: 30rpx;
  height: 30rpx;
}
.tag-img image{
  width: 100%;
  height: 100%;
}
.modal{
  position: fixed;
  z-index: 1000000;
}
.modal{
  position: fixed;
  top: 0;
  z-index: 900;
  background-color: #000;
  opacity: 0.5;
  height: 100%;
  width: 100%;
}
.alert-box{
  position: fixed;
  top: 300rpx;
  left: 75rpx;
  opacity: 1;
  z-index: 1000;
  width: 600rpx;
  height: 240rpx;
  background-color: white;
  color: gray;
}
.alert-head{
  margin-top: 20rpx;
  text-align: center;
  font-size: 30rpx;
}
.alert-input{
  margin: 20rpx 0 0 30rpx;
  height: 40rpx;
  font-size: 30rpx;
  overflow: hidden;
}
.alert-choose{
  margin-top: 30rpx;
  width: 100%;
  height: 60rpx;
}
.alert-choose view{
  float: left;
  width: 50%;
  padding-top: 10rpx;
  text-align: center;
}
.alert-add{
  color: #abc39f; 
}